<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
</ul>
<% } %>


<div class="inventory-container">

    <h1>Delete Inventory</h1>
    <div class="notice">
        <%- messages() %>
    </div>

    <p>Confirm Deletion - The delete is permanent.</p>

    <form action="/inv/delete" method="post" id="updateForm">
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>

        <label for="inv_make">Inventory Make</label>
        <input type="text" id="inv_make" name="inv_make" required pattern="^[A-Za-z0-9]+$"
            title="No spaces or special characters" value="<%= locals.inv_make %>" readonly>

        <label for="inv_model">Inventory Model</label>
        <input type="text" id="inv_model" name="inv_model" required pattern="^[A-Za-z0-9]+$"
            title="No spaces or special characters" value="<%= locals.inv_model %>" readonly>

        <label for="inv_year">Inventory Year</label>
        <input type="number" id="inv_year" name="inv_year" required min="1800" max="2100"
            value="<%= locals.inv_year %>" readonly>

        <label for="inv_price">Inventory Price</label>
        <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>" readonly>

        <button type="submit">Delete Vehicle</button>
    </form>
</div>

<script src="/js/inv-update.js"></script>