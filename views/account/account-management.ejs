<main class="account-management-container">
  <h1><%= title%></h1>

  <div><%- messages() %></div>

  <h2 class="greetings">Welcome <%- firstname %></h2>

  <section class="account-management-links">
    <% if ( 
      locals.accountData.account_type !== 'Admin' &&
      locals.accountData.account_type !== 'Employee') { %>
    <div>
      <h3>Account Management</h3>
      <p>Manage your account</p>
      <a href="/account/update">Update account information</a>
    </div>
    <% } else { %>
    <div>
      <h3>Account Management</h3>
      <p>Manage your account</p>
      <a href="/account/update">Update account information</a>
    </div>
    <div>
      <h3>Inventory Management</h3>
      <p>Manage your inventory</p>
      <a href="/inv">Manage Inventory</a>
    </div>
    <% } %>
  </section>

  <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>

  <p>You're logged in</p>
</main>
